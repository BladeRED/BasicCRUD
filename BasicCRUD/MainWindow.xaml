<Window x:Class="BasicCRUD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicCRUD"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1000">
    <Grid>

        <Button Command="{Binding GetGamersCommand}" Content="Get All Users" HorizontalAlignment="Center" Margin="0,305,0,0" VerticalAlignment="Top" Width="500" Background="Magenta" Visibility="Visible"/>
        <DataGrid ItemsSource="{Binding Gamers}" AutoGenerateColumns="True" Margin="162,21,135,134">
        </DataGrid>
    </Grid>
</Window>
